#!/usr/bin/env ruby
# frozen_string_literal: true

require_relative '../lib/jiffy_shirts_coding_challenge'

opts = Slop.parse do |o|
  o.string '--data', 'JSON with product information', required: true
  o.string '--order', 'JSON with order information', required: true
  o.banner = "usage: runner --data FILE_PATH --order FILE_PATH"
  o.on '-h', '--help' do
    puts o
    exit
  end
end

Utils.load_data(opts[:data])
order = Utils.process_order(opts[:order])

puts order
